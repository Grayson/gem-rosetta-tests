#!/usr/bin/env bash

PARENT_DIRECTORY="$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd)"
source "${PARENT_DIRECTORY}/../util.sh"

main() {
	local real_gem=$(caching_real_path "$1" "$PARENT_DIRECTORY")
	
	shift # Chomp script name

	if [[ -n $(is_rosetta) ]]; then
		arch -arm64 "$real_gem" $@
	else
		"$real_gem" $@
	fi
}

main "$@"